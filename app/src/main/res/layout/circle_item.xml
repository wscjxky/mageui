<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/lavenderblush"
    app:elevation="1dp">
    <TextView
        android:text="类型"
        android:layout_marginLeft="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circle_tv_type"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/base_swipe_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_iv_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/logo2" />

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/circle_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="朋友圈"
                android:textAppearance="@style/TextAppearance.AppCompat"

                android:textSize="24sp" />

            <TextView
                android:id="@+id/circle_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:text="朋友圈"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:text="用户名"
        android:layout_marginLeft="20px"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/circle_tv_username"
        android:layout_weight="1" />
</android.support.v7.widget.CardView>