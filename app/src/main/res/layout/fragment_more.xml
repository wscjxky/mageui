<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <!-- 全圆角-->
    <!--<LinearLayout style="@style/wrap_layout"-->
    <!--android:id="@+id/linearLayout">-->
    <!--</LinearLayout>-->
<ImageView
    android:id="@+id/show_bk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />


    <LinearLayout style="@style/wrap_layout"
        android:alpha="0.9"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true">
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/more_linel_mywallet">
            <TextView style="@style/usertext"
                android:text="钱包"
                android:id="@+id/more_wallet" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="修改皮肤"
                android:id="@+id/more_linel_changeskin" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/mid_layout"
            android:id="@+id/more_gpa"
            android:clickable="true"
            >
            <TextView style="@style/usertext"
                android:text="个人主页"

                />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 下圆角-->

        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="常用信息"
                android:id="@+id/more_linel_otherinfo" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>

        <LinearLayout style="@style/bottom_layout"
            android:id="@+id/more_linel_setting" >
            <TextView style="@style/usertext" android:text="设置"
                />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>