<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainf_background"
    android:orientation="horizontal"
    android:layout_row="4"
    android:layout_column="4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="60dp"
>

    <ImageView
        android:layout_marginTop="15dp"

        android:id="@+id/publish_iv_used"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="2"
        android:layout_row="0"
        android:clickable="true"

        android:cropToPadding="false"
        app:srcCompat="@mipmap/ico_shop" />

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/publish_iv_lost"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_column="2"
        android:layout_row="1"
        android:clickable="true"
        android:cropToPadding="false"
        app:srcCompat="@mipmap/ico_lost" />

    <ImageView
        android:id="@+id/publish_iv_findwork"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_row="2"
        android:adjustViewBounds="false"
        android:clickable="true"
        app:srcCompat="@mipmap/icon_findwork" />

    <ImageView
        android:layout_marginTop="15dp"

        android:id="@+id/publish_iv_join"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_row="0"
        android:clickable="true"
        android:background="@mipmap/icon_joingood" />

    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/publish_iv_print"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_row="1"
        android:adjustViewBounds="false"
        android:clickable="true"
        android:cropToPadding="false"
        app:srcCompat="@mipmap/icon_print" />


</GridLayout>