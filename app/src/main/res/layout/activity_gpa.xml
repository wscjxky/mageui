<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/mytoolbar">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:text="成绩"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5.13"
            android:ems="10"
            android:text="学分"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp" />
    </LinearLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/gpa_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
       >

    </ListView>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="@color/pink"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/gpa_btn_peking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_attachment"
            fab:fab_size="mini"

            fab:fab_title="北大算法" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/gpa_btn_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_attachment"
            fab:fab_size="mini"

            fab:fab_title="五分满绩算法" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/gpa_btn_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_attachment"
            fab:fab_size="mini"

            fab:fab_title="四分满绩算法" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/gpa_btn_recovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_fab_star"
            fab:fab_size="mini"
            fab:fab_title="恢复输入" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/gpa_btn_addinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_fab_star"
            fab:fab_size="mini"
            fab:fab_title="添加输入框" />


    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </RelativeLayout>
</LinearLayout>